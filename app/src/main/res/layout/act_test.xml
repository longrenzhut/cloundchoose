<?xml version="1.0" encoding="utf-8"?>
<com.haiqi.base.common.UIVerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.haiqi.base.widget.damp.DragContainer
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:drag_right="true"
        app:drag_direction="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <com.haiqi.base.widget.shape.AnimPieCircleView
                    android:id="@+id/pie_test"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <com.haiqi.base.widget.progressbar.AnimProgressBar
                    android:id="@+id/apb_test"
                    android:layout_width="match_parent"
                    app:anim_bg_color="#ff0000"
                    app:anim_pre_color="#0000ff"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_height="@dimen/dp_8"/>

                <com.haiqi.base.widget.progressbar.AnimProgressBar
                    android:id="@+id/apb_test_1"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    app:anim_bg_color="#ff0000"
                    app:anim_pre_color="#0000ff"
                    android:layout_height="@dimen/dp_8"/>

                <com.haiqi.base.widget.progressbar.AnimProgressBar
                    android:id="@+id/apb_test_2"
                    android:layout_width="match_parent"
                    app:anim_bg_color="#ff0000"
                    app:anim_pre_color="#0000ff"
                    app:anim_radius="@dimen/dp_5"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_height="@dimen/dp_8"/>

                <com.haiqi.base.widget.progressbar.AnimProgressBar
                    android:id="@+id/apb_test_3"
                    android:layout_width="match_parent"
                    app:anim_bg_color="#ff0000"
                    app:anim_pre_color="#0000ff"
                    app:anim_radius="@dimen/dp_5"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_height="@dimen/dp_8"/>


                <com.haiqi.base.widget.tab.TabLayout
                    android:id="@+id/tab_test"
                    app:tab_line_stroke="@dimen/dp_1"
                    app:tab_line_color="#ff0000"
                    app:tab_selected_color="#ff0000"
                    app:tab_color="#00ff00"
                    app:tab_padding="@dimen/dp_8"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/cl_686868"
                    app:tab_line_width="@dimen/dp_50"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"/>

                <com.haiqi.base.widget.tab.TabLayout
                    android:id="@+id/tab_test_1"
                    app:tab_line_stroke="@dimen/dp_1"
                    app:tab_line_color="#ff0000"
                    app:tab_selected_color="#ff0000"
                    app:tab_textsize="@dimen/text_sp_15"
                    app:tab_color="#00ff00"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"/>

                <TextView
                    android:layout_width="80dp"
                    android:text="dsfsdfsd"
                    android:gravity="center"
                    android:textColor="#ff0000"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="80dp"
                    android:text="dsfsdfsd"
                    android:gravity="center"
                    android:textColor="#ff0000"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="80dp"
                    android:text="dsfsdfsd"
                    android:gravity="center"
                    android:textColor="#ff0000"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_width="80dp"
                    android:text="dsfsdfsd"
                    android:gravity="center"
                    android:textColor="#ff0000"
                    android:layout_height="100dp" />


                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_test"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>


            </LinearLayout>




        <TextView
            android:layout_width="80dp"
            android:text="dsfsdfsd"
            android:gravity="center"
            android:textColor="#ff0000"
            android:layout_height="match_parent" />
    </com.haiqi.base.widget.damp.DragContainer>

</com.haiqi.base.common.UIVerLayout>